{
	"name": "Add to Kinopio",
	"description": "Collect and connect your thoughts",
  "homepage_url": "https://kinopio.club",
	"version": "1.0",
	"manifest_version": 2,
	"icons": {
		"16": "assets/icon-16.png",
		"48": "assets/icon-48.png",
